<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <RadioGroup
        android:id="@+id/radiogroup_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/radiogroup_mode_disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_disabled"
            android:onClick="onRadioButtonClicked"
            android:enabled="false"/>
        <RadioButton
            android:id="@+id/radiogroup_mode_car_of_day_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_car_of_day_picture"
            android:onClick="onRadioButtonClicked"
            android:enabled="false"/>
        <RadioButton
            android:id="@+id/radiogroup_mode_new_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_new_picture"
            android:onClick="onRadioButtonClicked"
            android:enabled="false"/>
        <RadioButton
            android:id="@+id/radiogroup_mode_random_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_random_picture"
            android:onClick="onRadioButtonClicked"
            android:enabled="false"/>
    </RadioGroup>

    <Button
        android:id="@+id/update_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="updateWallpaper"
        android:text="@string/update_wallpaper"
        android:enabled="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_status"
        />

</LinearLayout>
